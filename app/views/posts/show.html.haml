.posts-wrapper.row
  .post
    .post-head
      .name
        = @post.user.user_name
    .image.center-block
      =image_tag @post.image.variant(resize_to_limit: [500, 500])
    %p.caption
      =@post.caption
    .text-center
      =link_to "Cancel", posts_path

    .text-center.edit-links

      - if @post.user.id == current_user.id
        .text-center.edit-links
          = link_to "Edit Post", edit_post_path(@post)
      - else
        .text-center.edit-links
          =link_to "Cancel", posts_path
